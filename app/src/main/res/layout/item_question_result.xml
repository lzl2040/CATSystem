<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingRight="@dimen/margin_10"
    android:paddingLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="你好"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18"
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/choice_group"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginBottom="@dimen/margin_10"
            android:drawablePadding="@dimen/item_question_radiobtn_interval"
            android:button="@null"
            android:drawableLeft="@drawable/question_checked"
            android:text="A.你好呀"
            android:textSize="@dimen/item_question_choice_size"
            android:id="@+id/choice_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginBottom="@dimen/margin_10"
            android:drawablePadding="@dimen/item_question_radiobtn_interval"
            android:button="@null"
            android:drawableLeft="@drawable/question_checked"
            android:text="A.你好呀"
            android:textSize="@dimen/item_question_choice_size"
            android:id="@+id/choice_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginBottom="@dimen/margin_10"
            android:drawablePadding="@dimen/item_question_radiobtn_interval"
            android:button="@null"
            android:drawableLeft="@drawable/question_checked"
            android:text="A.你好呀"
            android:textSize="@dimen/item_question_choice_size"
            android:id="@+id/choice_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:drawablePadding="@dimen/item_question_radiobtn_interval"
            android:button="@null"
            android:drawableLeft="@drawable/question_checked"
            android:text="A.你好呀"
            android:textSize="@dimen/item_question_choice_size"
            android:id="@+id/choice_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/correct"
            android:id="@+id/answer_result"
            android:layout_width="@dimen/item_question_result_icon_size"
            android:layout_height="@dimen/item_question_result_icon_size"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/black"
            android:textSize="@dimen/item_question_result_text_size"
            android:text="回答正确"
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="解析:"
            android:textSize="@dimen/item_question_explain_text_size"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_10"
            android:text="123"
            android:textSize="@dimen/item_question_explain_text_size"
            android:textColor="@color/black"
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/back_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>